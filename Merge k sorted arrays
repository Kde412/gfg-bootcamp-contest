

class Solution
{
    public:
    //Function to merge k sorted arrays.
    vector<int> mergeKArrays(vector<vector<int>> arr, int K)
    {
        vector<int>output; 
        int c = 0;
 

    // traverse the matrix

    for (int i = 0; i < arr.size(); i++) {

        for (int j = 0; j < arr[i].size(); j++)

            output.push_back(arr[i][j]);

    }
 

    // sort the array 
    

    sort(output.begin(),output.end()); 
    

return output;  
}

    
};
